        <div class="row">

            <div class="col-md-6">
                <h3>Input Diagram</h3>
                <div id="inputmap"></div>
                <h4 id="diagName"> </h4>
            </div>
            <div class="col-md-6">
                <h3>Output Diagram</h3>
                <div id="outputmap"></div>
